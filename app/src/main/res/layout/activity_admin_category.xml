<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add New Furniture"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/table"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/table" />

        <ImageView
            android:id="@+id/sofa"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:src="@drawable/sofa" />
        <ImageView
            android:id="@+id/living"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/living" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/dining"
            android:layout_width="130dp"
            android:layout_height="140dp"
            android:src="@drawable/dining1"
            />

        <ImageView
            android:id="@+id/chair"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/chair"
            />
        <ImageView
            android:id="@+id/cupboard"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/cupboard"
            />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_below="@+id/linear2_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/bed"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/bedroom"
            />

        <ImageView
            android:id="@+id/drawer"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/drawer"
            />
        <ImageView
            android:id="@+id/tv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/tv4"
            />



    </LinearLayout>

    <Button
        android:id="@+id/check_orders_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/admin_logout_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark"
        android:text="Check New Orders"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="25dp" />

    <Button
        android:id="@+id/admin_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Logout"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:textAllCaps="false"
        />
</RelativeLayout>